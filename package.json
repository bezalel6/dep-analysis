{
  "name": "@rndev666/dep",
  "version": "2.1.1",
  "description": "A tool to analyze and visualize imports and call relationships",
  "files": [
    "bin/**/*"
  ],
  "bin": {
    "dep": "./bin/src/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf bin",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "start": "ts-node ./src/cli.ts ",
    "semantic-release": "semantic-release",
    "typecheck": "tsc --noEmit",
    "test:example": "npm run build && node bin/src/cli --pattern \"examples/sample-project/src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bezalel6/dep-analysis.git"
  },
  "license": "MIT",
  "author": {
    "name": "RNDev",
    "email": "bezalel6@users.noreply.github.com",
    "url": "https://github.com/bezalel6"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "typescript",
    "cli",
    "dependency",
    "analyzer",
    "imports",
    "static-analysis"
  ],
  "bugs": {
    "url": "https://github.com/bezalel6/dep-analysis/issues"
  },
  "homepage": "https://github.com/bezalel6/dep-analysis#readme",
  "dependencies": {
    "@typescript-eslint/types": "^5.62.0",
    "commander": "^7.2.0",
    "glob": "^11.0.1",
    "open": "^8.4.2",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/estree": "^1.0.7",
    "@types/node": "^12.20.11",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^7.25.0",
    "eslint-plugin-node": "^11.1.0",
    "lint-staged": "^13.2.1",
    "rimraf": "^6.0.1",
    "semantic-release": "^21.0.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ]
    ]
  }
}