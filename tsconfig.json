{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": false,
    "outDir": "lib/",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    ".eslintrc.js",
    "examples/**/*"
  ]
}